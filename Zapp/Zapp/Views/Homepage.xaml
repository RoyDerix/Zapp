<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zapp.Views.Homepage"
             Title="Homepage">
    <ListView x:Name="KlantenCollectionView"
              SelectionMode="None"
              ItemTapped="OnItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding datum}" TextColor="Black"></Label>
                        <Label Text="{Binding opmerkingen}" TextColor="Black"></Label>
                        <Label Text="{Binding voornaam}" TextColor="Black"></Label>
                        <Label Text="{Binding achternaam}" TextColor="Black"></Label>

                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>